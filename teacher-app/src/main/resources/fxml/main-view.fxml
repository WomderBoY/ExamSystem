<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-1.0" minWidth="-1.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bit.examsystem.teacher.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
<!--                <Menu mnemonicParsing="false" text="文件(_F)">-->
<!--                    <items>-->
<!--                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="退出" />-->
<!--                    </items>-->
<!--                </Menu>-->
                <Menu mnemonicParsing="false" text="服务器(_S)">
                    <items>
                        <MenuItem fx:id="startServerMenuItem" mnemonicParsing="false" onAction="#handleStartServer" text="启动服务" />
                        <MenuItem fx:id="stopServerMenuItem" mnemonicParsing="false" onAction="#handleStopServer" text="停止服务" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="考试(_E)">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleManageExams" text="试卷管理..." />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="成绩(_R)">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleShowResults" text="查看/导出成绩..." />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="帮助(_H)">
                    <items>
                        <MenuItem mnemonicParsing="false" text="关于" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="考试管理">
                    <content>
                        <BorderPane>
                            <top>
                                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                                    <Label text="选择试卷开始考试:" />
                                    <ComboBox fx:id="examSelectionComboBox" prefWidth="250.0" promptText="请选择一份试卷" />
                                    <Button fx:id="startExamButton" onAction="#handleStartExam" text="开始考试" style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
                                </HBox>
                            </top>
                            <center>
                                <!-- 2. Add the new Dashboard VBox here -->
                                <VBox fx:id="dashboardPane" alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                                    <Label text="当前状态" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                                    <Label fx:id="examStatusLabel" text="等待开始" style="-fx-font-size: 36px; -fx-text-fill: #888;" />
                                    <Separator maxWidth="400.0" />
                                    <GridPane hgap="10" vgap="10" alignment="CENTER">
                                        <columnConstraints><ColumnConstraints prefWidth="150"/><ColumnConstraints prefWidth="100"/></columnConstraints>

                                        <Label text="当前考试:" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                                        <Label fx:id="currentExamTitleLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="在线学生数:" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                                        <Label fx:id="onlineStudentCountLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="已提交答卷:" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                                        <Label fx:id="submittedCountLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label text="结束倒计时:" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: red;"/>
                                        <Label fx:id="examTimerLabel" text="--:--:--" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: red; -fx-font-size: 16px;"/>
                                    </GridPane>
<!--                                    <Separator maxWidth="400.0" />-->
<!--                                    <Button onAction="#handleEndExam" text="手动结束考试" prefHeight="40" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>-->
                                    <Button fx:id="gradeExamButton" onAction="#handleGradeExam" text="自动阅卷" prefHeight="40" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </VBox>
                            </center>
                        </BorderPane>

                    </content>
                </Tab>
                <Tab text="学生监控">
<!--                    <Tab text="在线学生">-->
                    <content>
<!--                        <BorderPane>-->

<!--                            <center>-->
                                <TableView fx:id="studentsTableView">
                                    <columns>
                                        <TableColumn fx:id="studentIdColumn" prefWidth="150.0" text="学号" />
                                        <TableColumn fx:id="nameColumn" prefWidth="120.0" text="姓名" />
                                        <TableColumn fx:id="ipColumn" prefWidth="200.0" text="IP地址" />
                                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="状态" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
<!--                            </center>-->
<!--                        </BorderPane>-->
                    </content>
<!--                    </Tab>-->
                </Tab>
