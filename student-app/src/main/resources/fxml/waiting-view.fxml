<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bit.examsystem.student.controller.WaitingController">
    <children>
        <ProgressIndicator prefHeight="80.0" prefWidth="80.0" />
        <Label text="已成功连接至教师端">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label fx:id="studentInfoLabel" text="学生信息加载中..." textFill="#555555" />
        <Label text="请稍候，老师开启考试后将自动为您跳转到考试界面。" textFill="#888888" />
        <Separator maxWidth="400.0" />
        <Button onAction="#handleQuit" text="退出考试系统" style="-fx-background-color: #ff4444; -fx-text-fill: white;" />
    </children>
</VBox>